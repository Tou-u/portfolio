---
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portafolio de Rodrigo Riquelme. Desarrollador Web Full Stack"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio de Rodrigo Riquelme | Desarrollador Web Full Stack</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="bg">
      <div class="content">
        <main
          class="max-w-6xl mx-auto my-1 shadow-[3px_27px_111px_5px_rgba(236,16,218,_0.13)] rounded-md text-white"
        >
          <slot />
        </main>
      </div>
    </div>

    <style>
      .bg {
        background-image: linear-gradient(
            45deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(
            112.5deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(
            45deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(90deg, rgb(22, 22, 22), rgb(236, 16, 218));
        background-blend-mode: overlay, overlay, overlay, normal;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        width: 100vw;
        position: fixed;
        z-index: -1;
        overflow: auto;
      }

      .content {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
      }
    </style>
  </body>
</html>
