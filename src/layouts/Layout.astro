---
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portafolio de Rodrigo Riquelme. Desarrollador Web Full Stack"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio de Rodrigo Riquelme | Desarrollador Web Full Stack</title>
    <ViewTransitions />
  </head>
  <body class="bg">
    <main
      class="max-w-6xl text-white mx-auto shadow-[3px_27px_111px_5px_rgba(255,255,255,_0.13)]"
    >
      <slot />
    </main>

    <style>
      .bg {
        background-color: black;
        background-image: linear-gradient(
            45deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(
            112.5deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(
            45deg,
            rgb(10, 10, 10) 0%,
            rgb(10, 10, 10) 60%,
            rgb(35, 35, 35) 60%,
            rgb(35, 35, 35) 62%,
            rgb(60, 60, 60) 62%,
            rgb(60, 60, 60) 76%,
            rgb(85, 85, 85) 76%,
            rgb(85, 85, 85) 77%,
            rgb(109, 109, 109) 77%,
            rgb(109, 109, 109) 86%,
            rgb(134, 134, 134) 86%,
            rgb(134, 134, 134) 92%,
            rgb(159, 159, 159) 92%,
            rgb(159, 159, 159) 100%
          ),
          linear-gradient(90deg, rgb(22, 22, 22), rgb(236, 16, 218));
        background-blend-mode: overlay, overlay, overlay, normal;
        background-attachment: fixed;
      }
    </style>
  </body>
</html>
