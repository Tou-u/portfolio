---
import Menu from "./icons/Menu.astro";
---

<nav>
  <section class="sm:hidden">
    <input
      type="checkbox"
      id="drawer-toggle"
      class="relative sr-only peer h-[45px]"
    />
    <label
      for="drawer-toggle"
      class="absolute top-1 left-1 inline-block p-2 transition-all duration-500 bg-black/80 rounded-lg peer-checked:rotate-180 peer-checked:left-64"
    >
      <Menu />
    </label>
    <!-- Drawer -->
    <div
      class="absolute top-0 left-0 z-20 w-64 transition-all duration-500 transform -translate-x-full bg-black/80 peer-checked:translate-x-0"
    >
      <div class="px-6 py-4 flex flex-col overflow-hidden">
        <a>Sobre mí</a>
        <a>Experiencia</a>
        <a>Tecnologías</a>
        <a>Proyectos</a>
      </div>
    </div>
  </section>
  <section class="hidden sm:flex justify-center items-center gap-8 h-[60px]">
    <a class="text-lg font-semibold p-1 rounded-md hover:bg-white/10" href="#"
      >Sobre mí</a
    >
    <a class="text-lg font-semibold p-1 rounded-md hover:bg-white/10" href="#"
      >Experiencia</a
    >
    <a class="text-lg font-semibold p-1 rounded-md hover:bg-white/10" href="#"
      >Tecnologías</a
    >
    <a class="text-lg font-semibold p-1 rounded-md hover:bg-white/10" href="#"
      >Proyectos</a
    >
  </section>
</nav>
