---
import Briefcase from "./icons/Briefcase.astro";
import Cap from "./icons/Cap.astro";
---

<section class="px-4 pb-4">
  <div
    class="bg-[rgba(175,46,138,0.13)] p-2 rounded-t-md text-lg font-semibold"
  >
    Experiencia
  </div>
  <div
    class="bg-black/50 rounded-b-md py-4 flex items-center justify-center px-6"
  >
    <div class="space-y-2 border-l-2 border-dashed">
      <div class="relative w-full">
        <Briefcase />
        <div class="ml-6">
          <h4 class="font-bold">
            Asistente técnico para especialidad de pintura y andamios
          </h4>
          <p class="mt-2 max-w-screen-sm text-sm text-white/80">
            Proyecto Rajo Inca - Echeverría Izquierdo Montajes Industriales S.A.
          </p>
          <span class="mt-1 text-sm font-semibold">2023</span>
        </div>
      </div>

      <div class="relative w-full">
        <Cap />
        <div class="ml-6">
          <h4 class="font-bold">Ingeniería en Informática.</h4>
          <p class="mt-2 max-w-screen-sm text-sm text-white/80">
            Práctica Profesional, desarrollador de aplicación web para sitio de
            compras online en empresa Lastdon Spa.
          </p>
          <p class="mt-2 max-w-screen-sm text-sm text-white/80">
            Práctica Laboral, líder de equipo en desarrollo de aplicación móvil
            para viajes en empresa Smart Software.
          </p>
          <span class="mt-1 text-sm font-semibold">2017-2022</span>
        </div>
      </div>
      <div class="relative w-full">
        <Cap />
        <div class="ml-6">
          <h4 class="font-bold">
            Técnico en Administración de Empresas mención en Recursos Humanos.
          </h4>
          <p class="mt-2 max-w-screen-sm text-sm text-white/80">
            Práctica en empresa Sotraben - Grupo Benito.
          </p>
          <span class="mt-1 text-sm font-semibold">2016-2017</span>
        </div>
      </div>
    </div>
  </div>
</section>
